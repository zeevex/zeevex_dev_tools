source :gemcutter

## standards
gem 'rake', '= 0.9.2'
gem 'launchy'

##  
## interacting with bug trackers etc.
##
# this is the library; the included `pt` gem should also be installed
gem 'pivotal-tracker'

# lighthouse - https://github.com/smeevil/fresnel
gem 'fresnel'

# see http://ticketrb.com/ - `tm` command
gem 'ticketmaster'
gem 'ticketmaster-pivotal'
gem 'ticketmaster-bugherd'
gem 'ticketmaster-github'
gem 'ticketmaster-lighthouse'
gem 'ticketmaster-basecamp'
gem 'ticketmaster-zendesk'

##
## Communication
##
# See https://github.com/avdi/firetower for setup
gem 'firetower'


##
## git/github enhancements
##
gem 'github'
gem 'hub'

# github pull requester
gem 'pullme'

##
## CI and build systems
##

# Cmdline interface to Jenkins - https://github.com/cynipe/domo
gem 'domo'


##
## Ruby shells, debuggers, etc.
##
# enhanced shell
gem 'pry', '0.9.6.2'
gem 'pry-doc'
gem 'pry_debug'
gem 'pry-remote', '0.0.1' #,         :git => 'git@github.com:zeevex/pry-remote.git'
gem 'gist',               :require => false

# dependency installation
gem 'brewdler'

# performance optimization

gem 'ruby-prof',                         :require => false, :platform => :mri_18
gem 'jruby-prof',                        :require => false, :platform => :jruby
gem 'rspec-prof',                        :require => false, :platform => :mri_18
gem 'hitimes',                           :require => false
gem 'perftools.rb'

# general JS-from-Ruby runner
gem 'execjs'
# v8 embedding, necessary on Linux
gem 'therubyracer',                      :platform => :mri

# vm 'r' easy
# http://vagrantup.com/ and https://github.com/jedi4ever/veewee
gem 'vagrant'
gem 'veewee'

# system configuration management
gem 'chef'


# NOTE: you should also manually install everything in gems/*